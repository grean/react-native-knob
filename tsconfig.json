{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    // "jsx": "react",
    "lib": [
      "ES6"
    ],
    "target": "ESNext",
    ///////////////////////////
    // "target": "es6",
    "module": "ESNext",
    "declaration": true,
    // "outDir": "./lib",
    "strict": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
