{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "ES6"
    ],
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}